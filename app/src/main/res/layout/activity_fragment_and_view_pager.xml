<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fuzik.com.myapplication.fragment_activity_demo.FragmentAndViewPagerActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/rg_viewpager_main"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_viewpager1"
            android:text="第一个"
            android:button="@null"
            android:textColor="@drawable/radio_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_viewpager2"
            android:text="第二个"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/radio_selector"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_viewpager3"
            android:text="第三个"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/radio_selector"
            android:layout_height="wrap_content" />
    </RadioGroup>
</LinearLayout>
