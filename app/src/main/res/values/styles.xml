<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--fanlayoutmanager-->
    <style name="SportCardStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SportCardStyle.SportTile">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SportCardStyle.SportSplashTile">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <style name="SportCardStyle.SportSubtitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SportCardStyle.SportSplashSubtitle">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">10sp</item>-->
    </style>

    <style name="SportCardStyle.SportRound">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SportCardStyle.SportSplashRound">
        <item name="android:textStyle">italic</item>
        <!--<item name="android:textSize">10sp</item>-->
    </style>

    <style name="SportCardStyle.Time">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SportCardStyle.splashTime">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <style name="SportCardStyle.DayPart">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SportCardStyle.splashDayPart">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <!--carousellayoutmanager-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--vlayoutmanager-->
    <style name="IndicateText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#33000000</item>
    </style>

</resources>
